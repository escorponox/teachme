#!/usr/bin/env bash
echo "This is the pwd command."

# The command's name
echo -e 'pwd'

# the command's description
echo "The command pwd prints the current working directory to the console. The command name itself is short for print-working-directory. It is commonly used to show the current location in the file system."

echo "------------"

# the command's syntax
echo "Syntax:"
echo "test argument1 argument2"
echo -e "\targument1: description of argument 1"
echo -e "\targument2: description of argument 2"
#   ...      etc

echo "------------"

# the command's usage examples
# example 1
echo "Print the working directory:"
echo "$ pwd"
echo "/home/user/"

exit 0
