#!/usr/bin/env bash
echo "This is a git init command."

# The command's name
echo -e 'git init'

# the command's description
echo "Create a new Git repository. It can initialize a new empty repository or convert an unversioned directory tree to a Git repository, making possible to start tracking changes."

echo "------------"

# the command's syntax
echo "Syntax:"
echo "git init [ --bare | -q ]"
echo -e "\t--bare: This creates a bare repository with no branches (including master). Useful when creating a central repository."
echo -e "\t-q: This is the quiet setting. Only error and warning messages will be displayed, all other output is suppressed."
#   ...      etc

echo "------------"

# the command's usage examples
# example 1
echo "git test"
echo description here

# example 2
echo "git test something"
echo description here


exit 0
